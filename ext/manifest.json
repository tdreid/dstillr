{
    "name": "dstillr",
    "version": "1.0.0",
    "description": "Remove spammy messages and accounts from your wallet on Steemit.com.",
    "icons": { "16": "dstillr-2-16.png",
               "48": "dstillr-1-48.png",
              "128": "dstillr-1-128.png" },    
    "permissions": [
        "storage"
        ],
    "browser_action": {
      "default_popup": "popup.html"
    },        
    "content_scripts": [
        {
            "matches": ["https://steemit.com/*/transfers"],
            "run_at": "document_start",
            "all_frames": true,
            "js": ["dstillr.min.js"]
        }
    ],
    "manifest_version": 2
}