{
    "name": "dstillr",
    "version": "0.1.15",
    "permissions": [
        "storage"
        ],
    "browser_action": {
      "default_popup": "popup.html"
    },        
    "content_scripts": [
        {
            "matches": ["https://steemit.com/*/transfers"],
            "run_at": "document_start",
            "all_frames": true,
            "js": ["dstillr.min.js"]
        }
    ],
    "manifest_version": 2
}